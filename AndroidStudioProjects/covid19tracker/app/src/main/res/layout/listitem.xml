<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_gravity="center_vertical"
            android:textSize="14dp"

            android:text="MAHARASHTRA"
            android:textColor="@color/Black"
            android:textStyle="bold" />
    </LinearLayout>




    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:id="@+id/rvconfirm"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            android:text="456225"

            android:textStyle="bold"
            android:textColor="@color/Black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:id="@+id/rvdeltaconfirm"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="455"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="@color/Red"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rvactive"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/Black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rvdeltaactive"
            android:textAllCaps="true"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="@color/Green"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
android:id="@+id/rvrecover"
            android:textStyle="bold"
            android:textColor="@color/Black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rvdeltarecover"
            android:textAllCaps="true"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="@color/Blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="true"
android:id="@+id/rvdeaths"
            android:textStyle="bold"
            android:textColor="@color/Black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rvdeltadeath"
            android:textAllCaps="true"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="@color/DarkOrange"/>


    </LinearLayout>


</LinearLayout>